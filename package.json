{
  "name": "hrcs-api",
  "description": "Open-source HR candidate screening API built with Bun, Elysia, Prisma, and PostgreSQL.",
  "license": "MIT",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uchkunrakhimow/hrcs-api.git"
  },
  "bugs": {
    "url": "https://github.com/uchkunrakhimow/hrcs-api/issues"
  },
  "homepage": "https://github.com/uchkunrakhimow/hrcs-api#readme",
  "private": true,
  "scripts": {
