    "prismabox": "^1.1.25",
    "puppeteer": "^24.22.3"
  },
  "devDependencies": {
    "@types/nodemailer": "^7.0.1",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.16.2",
    "bun-types": "latest"
  },
  "module": "src/index.js"
}
